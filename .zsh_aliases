# Sort entries alphabetically if none of -cftuvSUX nor --sort is specified
alias ll='ls -l --group-directories-first --time-style=+"%d.%m.%Y %H:%M:%S" --color=auto -F'
alias la='ls -la --group-directories-first --time-style=+"%d.%m.%Y %H:%M:%S" --color=auto -F'
alias l='la'

#home stuff
alias permm='sudo chgrp -R users /data/media/ && sudo chmod -R g+rwx /data/media/'
